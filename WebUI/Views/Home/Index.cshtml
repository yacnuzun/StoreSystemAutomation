<script>
    
    $(document).ready(function(){
    $.ajax({
            url: "https://localhost:7233/api/ProductImages/getall",
            type: "GET",
            crossDomain: true,
            dataType: "json",
            success: function (response) {
                var resp = JSON.parse(response)
                console.log(resp.Data);//bu şekilde yazınca çekiyor.
                $.each(resp.Data, function (key, value){
                document.getElementById("at").innerHTML="<div class=\"card-body\" onmouseover=\"büyült()\" onmouseout=\"küçült()\"\>"+
                        "<img id=\"i\" src=\""+value.ImagePath+"\" width=\"100\" />"+
                    "<p class=\"card-text\">With supporting text below as a natural lead-in to additional content.</p>"+
                    "<a href=\"#\" class=\"btn btn-primary\">Go somewhere</a>"+
                "</div>"
                })
            },
            error: function (xhr, status) {
                alert("error");
            }
        });
    })


    var widhtvalue = 4;
    var widhtvalueforimg = 100;

    var degistir = 1;
    var degistirforimg = 2;

    var temizle = 0;
    function küçült() {
        clearInterval(temizle);
        temizle = setInterval(azalt, 1);

    }
    function büyült() {
        clearInterval(temizle);
        temizle = setInterval(arttır, 1);
    }


    function arttır() {
        if (widhtvalue < 6 || widhtvalueforimg < 200) {
            if (widhtvalue < 6) {
                widhtvalue = widhtvalue + degistir;
                $("#ad").attr('class', 'col-sm-' + widhtvalue.toString());
            }
            widhtvalueforimg = widhtvalueforimg + degistirforimg;
            $("#i").attr('width', widhtvalueforimg);

        }
        else {
            clearInterval(temizle);
        }
    }
    function azalt() {
        if (widhtvalue > 4 || widhtvalueforimg > 100) {
            if (widhtvalue > 4) {
                widhtvalue = widhtvalue - degistir;
                $("#ad").attr('class', 'col-sm-' + widhtvalue.toString());
            }
            widhtvalueforimg = widhtvalueforimg - degistirforimg;
            $("#i").attr('width', widhtvalueforimg);

        }
        else {
            clearInterval(temizle);
            clearInterval(temizle);
        }
    }
</script>